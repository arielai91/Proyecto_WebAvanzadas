{
  "ReverseProxy": {
    "Routes": {
      "rest-api": {
        "ClusterId": "rest-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "soap-api": {
        "ClusterId": "soap-cluster",
        "Match": {
          "Path": "/soap/{**catch-all}"
        }
      },
      "notifications-hubs": {
        "ClusterId": "notifications-cluster",
        "Match": {
          "Path": "/hubs/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "rest-cluster": {
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "rest1": {
            "Address": "https://localhost:5001/"
          }
        }
      },
      "soap-cluster": {
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "soap1": {
            "Address": "https://localhost:5003/"
          }
        }
      },
      "notifications-cluster": {
        "HttpClient": {
          "DangerousAcceptAnyServerCertificate": true
        },
        "Destinations": {
          "notifications1": {
            "Address": "https://localhost:5004/"
          }
        }
      }
    }
  }
}
